{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "target": "esnext",
    "lib": ["ES6"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./server/*"],
      "@public": ["./public"],
      "@public/*": ["./public/*"],
      "@package": ["./package.json"]
    }
  },
  "include": ["./server"]
}
